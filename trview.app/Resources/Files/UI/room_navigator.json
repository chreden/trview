{
    "$schema": "../../../../trview.ui/schema.json",
    "type": "groupbox",
    "text": "Room",
    "size": {
        "width": 150,
        "height": 100
    },
    "border_colour": "grey",
    "children": [
        {
            "type": "window",
            "size": {
                "width": 130,
                "height": 30
            },
            "layout": {
                "type": "stack",
                "direction": "horizontal"
            },
            "children": [
                {
                    "type": "numericupdown",
                    "name": "current_room",
                    "size": {
                        "width": 50,
                        "height": 20
                    },
                    "min_value": 0,
                    "max_value": 0
                },
                {
                    "type": "label",
                    "size": {
                        "width": 30,
                        "height": 20
                    },
                    "text": "of",
                    "text_alignment": "centre",
                    "paragraph_alignment": "centre"
                },
                {
                    "type": "label",
                    "name": "max_rooms",
                    "size": {
                        "width": 50,
                        "height": 20
                    },
                    "text_alignment": "centre",
                    "paragraph_alignment": "centre"
                }
            ]
        },
        {
            "type": "listbox",
            "name": "stats",
            "position": {
                "x": 0,
                "y": 25
            },
            "size": {
                "width": 130,
                "height": 80
            },
            "columns": [
                {
                    "type": "string",
                    "name": "Name",
                    "width": 50
                },
                {
                    "type": "string",
                    "name": "Value",
                    "width": 80
                }
            ],
            "show_headers":  false,
            "show_scrollbar": false,
            "show_highlight": false
        }
    ]
}