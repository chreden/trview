{
    "$schema": "../../../../trview.ui/schema.json",
    "type": "window",
    "size": {
        "width": 250,
        "height": 420
    },
    "background_colour": {
        "r": 0.25,
        "g": 0.25,
        "b": 0.25
    },
    "layout": {
        "type": "stack",
        "padding": 3,
        "size_mode": "manual"
    },
    "children": [
        {
            "type": "window",
            "size": {
                "width": 200,
                "height": 20
            },
            "background_colour": {
                "r": 0.25,
                "g": 0.25,
                "b": 0.25
            },
            "layout": {
                "type": "stack",
                "padding": 2,
                "direction": "horizontal",
                "size_mode": "manual",
                "margin": {
                    "width": 2,
                    "height": 2
                }
            },
            "children": [
                {
                    "type": "checkbox",
                    "text": "Track Room",
                    "name": "TrackRoom",
                    "background_colour": {
                        "r": 0.25,
                        "g": 0.25,
                        "b": 0.25
                    }
                },
                {
                    "type": "window",
                    "size": {
                        "width": 10,
                        "height": 20
                    },
                    "background_colour": {
                        "r": 0.25,
                        "g": 0.25,
                        "b": 0.25
                    }
                },
                {
                    "type": "checkbox",
                    "name": "SyncItem",
                    "text": "Sync Item",
                    "background_colour": {
                        "r": 0.25,
                        "g": 0.25,
                        "b": 0.25
                    }
                },
                {
                    "type": "window",
                    "size": {
                        "width": 15,
                        "height": 20
                    },
                    "background_colour": {
                        "r": 0.25,
                        "g": 0.25,
                        "b": 0.25
                    }
                },
                {
                    "type": "button",
                    "text": "<<",
                    "name": "Expander",
                    "size": {
                        "width": 16,
                        "height": 16
                    }
                }
            ]
        },
        {
            "type": "listbox",
            "name": "Items",
            "size": {
                "width": 250,
                "height": 400
            },
            "background_colour": {
                "r": 0.25,
                "g": 0.25,
                "b": 0.25
            },
            "columns": [
                {
                    "identity": "key",
                    "type": "number",
                    "name": "#",
                    "width": 30
                },
                {
                    "type": "number",
                    "name": "Room",
                    "width": 30
                },
                {
                    "type": "number",
                    "name": "ID",
                    "width": 30
                },
                {
                    "type": "string",
                    "name": "Type",
                    "width": 100
                },
                {
                    "type": "boolean",
                    "name": "Hide",
                    "width": 50
                }
            ]
        }
    ]
}