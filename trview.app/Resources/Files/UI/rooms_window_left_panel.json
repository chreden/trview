{
    "$schema": "../../../../trview.ui/schema.json",
    "type": "window",
    "colours": {
        "background": {
            "r": 0.25,
            "g": 0.25,
            "b": 0.25
        }
    },
    "background_colour": "background",
    "size": {
        "width": 250,
        "height": 680
    },
    "layout": {
        "type": "stack",
        "padding": 3,
        "size_mode": "manual"
    },
    "children": [
        {
            "type": "window",
            "size": {
                "width": 250,
                "height": 20
            },
            "background_colour": "background",
            "layout": {
                "type": "stack",
                "padding": 6,
                "direction": "horizontal",
                "size_mode": "manual",
                "margin": {
                    "width": 2,
                    "height": 2
                }
            },
            "children": [
                {
                    "type": "checkbox",
                    "name": "sync_room",
                    "text": "Sync Room",
                    "background_colour": "background",
                    "state": true
                },
                {
                    "type": "checkbox",
                    "name": "track_item",
                    "text": "Track Item",
                    "background_colour": "background",
                    "state": false
                },
                {
                    "type": "checkbox",
                    "name": "track_trigger",
                    "text": "Track Trigger",
                    "background_colour": "background",
                    "state": false
                }
            ]
        },
        {
            "type": "listbox",
            "name": "Rooms",
            "background_colour": "background",
            "size": {
                "width": 250,
                "height": 660
            },
            "columns": [
                {
                    "name": "#",
                    "type": "number",
                    "width": 40
                },
                {
                    "name": "Items",
                    "type": "number",
                    "width": 100
                },
                {
                    "name": "Triggers",
                    "type": "number",
                    "width": 100
                }
            ]
        }
    ]
}