            "name": "name",
            "text": "No level",
            "size": {
                "width": 74,
                "height": 16
            },
            "background_colour": "transparent", 
            "text_alignment": "centre",
            "paragraph_alignment": "centre",
            "size_mode": "auto",
            "vertical_alignment": "centre"
        },
        {
            "type": "button",
            "name": "settings",
            "size": {
                "width": 16,
                "height": 16
            },
