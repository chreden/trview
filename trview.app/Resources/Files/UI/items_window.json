{
    "$schema": "../../../../trview.ui/schema.json",
    "type": "window",
    "size": {
        "width": 450,
        "height": 420
    },
    "children": [
        {
            "type": "window",
            "name": "panels",
            "size": {
                "width": 450,
                "height": 420
            },
            "auto_size": "height",
            "background_colour": "red",
            "layout": {
                "type": "stack",
                "direction": "horizontal",
                "size_mode": "manual",
                "padding": 0
            },
            "children": [
                {
                    "type": "window",
                    "name": "left_panel",
                    "auto_size": "height",
                    "colours": {
                        "background": {
                            "r": 0.25,
                            "g": 0.25,
                            "b": 0.25
                        }
                    },
                    "size": {
                        "width": 250,
                        "height": 420
                    },
                    "background_colour": "background",
                    "layout": {
                        "type": "stack",
                        "padding": 3,
                        "size_mode": "manual"
                    },
                    "children": [
                        {
                            "type": "window",
                            "size": {
                                "width": 200,
                                "height": 20
                            },
                            "background_colour": "background",
                            "layout": {
                                "type": "stack",
                                "padding": 2,
                                "direction": "horizontal",
                                "size_mode": "manual",
                                "margin": {
                                    "width": 2,
                                    "height": 2
                                }
                            },
                            "children": [
                                {
                                    "type": "checkbox",
                                    "text": "Track Room",
                                    "name": "TrackRoom",
                                    "background_colour": "background"
                                },
                                {
                                    "type": "window",
                                    "size": {
                                        "width": 10,
                                        "height": 20
                                    },
                                    "background_colour": "background"
                                },
                                {
                                    "type": "checkbox",
                                    "name": "SyncItem",
                                    "text": "Sync Item",
                                    "background_colour": "background"
                                },
                                {
                                    "type": "window",
                                    "size": {
                                        "width": 15,
                                        "height": 20
                                    },
                                    "background_colour": "background"
                                },
                                {
                                    "type": "button",
                                    "text": "<<",
                                    "name": "Expander",
                                    "size": {
                                        "width": 16,
                                        "height": 16
                                    }
                                }
                            ]
                        },
                        {
                            "type": "listbox",
                            "name": "Items",
                            "auto_size": "height",
                            "size": {
                                "width": 250,
                                "height": 400
                            },
                            "background_colour": "background",
                            "columns": [
                                {
                                    "identity": "key",
                                    "type": "number",
                                    "name": "#",
                                    "width": 30
                                },
                                {
                                    "identity": "none",
                                    "type": "number",
                                    "name": "Room",
                                    "width": 30
                                },
                                {
                                    "identity": "none",
                                    "type": "number",
                                    "name": "ID",
                                    "width": 30
                                },
                                {
                                    "identity": "none",
                                    "type": "string",
                                    "name": "Type",
                                    "width": 100
                                },
                                {
                                    "identity": "none",
                                    "type": "boolean",
                                    "name": "Hide",
                                    "width": 50
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "window",
                    "name": "divider",
                    "auto_size": "height",
                    "size": {
                        "width": 1,
                        "height": 420
                    },
                    "background_colour": "black"
                },
                {
                    "type": "window",
                    "name": "right_panel",
                    "auto_size": "height",
                    "colours": {
                        "background_top": {
                            "r": 0.225,
                            "g": 0.225,
                            "b": 0.225
                        },
                        "background_bottom": {
                            "r": 0.2,
                            "g": 0.2,
                            "b": 0.2
                        }
                    },
                    "background_colour": "background_top",
                    "size": {
                        "width": 200,
                        "height": 420
                    },
                    "layout": {
                        "type": "stack",
                        "size_mode": "manual"
                    },
                    "children": [
                        {
                            "type": "window",
                            "size": {
                                "width": 200,
                                "height": 8
                            },
                            "background_colour": "background_top"
                        },
                        {
                            "type": "groupbox",
                            "text": "Item Details",
                            "size": {
                                "width": 200,
                                "height": 240
                            },
                            "background_colour": "background_top",
                            "border_colour": "transparent",
                            "children": [
                                {
                                    "type": "window",
                                    "size": {
                                        "width": 180,
                                        "height": 230
                                    },
                                    "background_colour": "background_top",
                                    "layout": {
                                        "type": "stack",
                                        "padding": 8,
                                        "size_mode": "manual"
                                    },
                                    "children": [
                                        {
                                            "type": "listbox",
                                            "name": "Stats",
                                            "size": {
                                                "width": 180,
                                                "height": 180
                                            },
                                            "background_colour": "background_top",
                                            "columns": [
                                                {
                                                    "type": "number",
                                                    "name": "Name",
                                                    "width": 60
                                                },
                                                {
                                                    "type": "number",
                                                    "name": "Value",
                                                    "width": 120
                                                }
                                            ],
                                            "show_headers": false,
                                            "show_scrollbar": false,
                                            "show_highlight": false
                                        },
                                        {
                                            "type": "button",
                                            "name": "AddToRoute",
                                            "text": "Add to Route",
                                            "size": {
                                                "width": 180,
                                                "height": 20
                                            }
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "window",
                            "size": {
                                "width": 200,
                                "height": 5
                            },
                            "background_colour": "background_bottom"
                        },
                        {
                            "type": "groupbox",
                            "auto_size": "height",
                            "text": "Triggered By",
                            "size": {
                                "width": 200,
                                "height": 170
                            },
                            "background_colour": "background_bottom",
                            "border_colour": "transparent",
                            "children": [
                                {
                                    "type": "listbox",
                                    "name": "Triggers",
                                    "auto_size": "height",
                                    "size": {
                                        "width": 190,
                                        "height": 130
                                    },
                                    "background_colour": "background_bottom",
                                    "columns": [
                                        {
                                            "type": "number",
                                            "name": "#",
                                            "width": 25
                                        },
                                        {
                                            "type": "number",
                                            "name": "Room",
                                            "width": 35
                                        },
                                        {
                                            "type": "string",
                                            "name": "Type",
                                            "width": 120
                                        }
                                    ],
                                    "show_headers": true,
                                    "show_scrollbar": true,
                                    "show_highlight": true
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}